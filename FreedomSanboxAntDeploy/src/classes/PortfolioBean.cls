 public class PortfolioBean {
	public String recordType{get;set;}
	public Double currentAsset{get;set;}
	public Decimal currentPercent{get;set;}
	public Double suggestedAsset{get;set;}
	public Decimal suggestedPercent{get;set;}
  
 	public PortfolioBean() {
 		recordType = '';
 		currentAsset = 0;
 		currentPercent = 0;
 		suggestedAsset = 0;
 		suggestedPercent = 0;
	}
 	public PortfolioBean(String str) {
 		recordType = str;
 		currentAsset = 0;
 		currentPercent = 0;
 		suggestedAsset = 0;
 		suggestedPercent = 0;
 	} 		 
}